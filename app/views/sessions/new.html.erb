<div class="page-header">
  <h1>Sign In</h1>
</div>

<div class="row">
  <div class="col-sm-4">

  <%= form_tag("/sessions", method: 'post') do  %>

    <div class="form-group">
      <%= label_tag :email, "Email Address" %>
      <%= text_field_tag :email, "", autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :password, "Password" %>
      <%= password_field_tag :password, "", class: 'form-control' %>
    </div>

    <%= submit_tag "Log In", class: 'btn btn-success btn-lg'%>
    or
    <%= link_to "Cancel", root_url %>

  <% end %>

  </div>

  <div class="col-sm-4 col-sm-offset-4 well">
    <h3>User Accounts</h3>
    <table class="table">
      <thead>
        <tr>
          <th>Email</th>
          <th>Password</th>
        </tr>
      </thead>
      <tbody>
        <% User.all.each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <td><%= user.password %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
