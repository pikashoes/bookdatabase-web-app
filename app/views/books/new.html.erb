<div class="page-header">
  <h1>Add a Book to the ABD</h1>
</div>

<div class="row">
  <div class="col-sm-4">

  <%= form_tag("/books", method: 'post') do  %>

    <div class="form-group">
      <%= label_tag :title, "Book Title" %>
      <%= text_field_tag :title, "", autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :photo_url, "Link to Image or Photo" %>
      <%= text_field_tag :photo_url, "", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :author, "Add the Author" %>
      <%= text_field_tag :author, "", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :genre, "Add the Genre" %>
      <%= text_field_tag :genre, "", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :summary, "Add a Summary of the Book" %>
      <%= text_area_tag :summary, "", rows: 5, class: 'form-control' %>
    </div>

    <%= submit_tag "Create Item", class: 'btn btn-success btn-lg'%>
    or
    <%= link_to "Cancel", "/books" %>

  <% end %>

  </div>
</div>
