<div class="page-header">
  <h1>My Account</h1>
</div>

<div class="row">
  <div class="col-sm-12">

    <p class="lead">
      <strong>Name:</strong> <%= @user.name %>
    </p>

    <p class="lead">
      <strong>Email Address:</strong> <%= @user.email %>
    </p>

    <p class="lead">
      <strong>Password:</strong> <%= @user.password %>
    </p>

  </div>
</div>


<div class="row">
  <div class="col-sm-12">

    <h3>Last Read</h3>

    <% @favorites.each do |favorite| %>

      <div class="media img-responsive">
        <div class="media-left">
          <a href="/books/<%= favorite.book.id %>">
            <%= image_tag favorite.book.photo_url, class: 'media-object' %>
          </a>
        </div>
        <div class="media-body">
          <h4 class="media-heading"><%= favorite.book.title %></h4>
          <%= favorite.book.summary %>
        </div>
      </div>

    <% end %>
  </div>
</div>
